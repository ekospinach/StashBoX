<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview_stash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/stash"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/listview_stash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_addstash"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textview_stash"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp" >
    </ListView>

    <TextView
        android:id="@+id/textview_addstash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listview_stash"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text="@string/add_stash"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>